::style [stylesheet]
* {
    box-sizing: border-box;
}

body {
    margin: 0;
}

#passage {
    height: 100vh;
    width: 100vw;
    max-width: 100vw;
    position: relative;
}

/* option button */
a {
    min-width: 172px;
    min-height: 54px;
    margin: 15px;
    padding: 15px 20px;
    font-size: var(--font-size-lg);
    background-color: var(--primary-color-dark);

    font-family: var(--font-type);
    color: var(--grey);

    border: none;
    text-align: center;
    font-weight: 600;
    font-size: 18px;
    line-height: 22px;
}

a:hover {
    color: var(--primary-color);
}
